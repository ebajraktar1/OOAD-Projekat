@model SanZan.Models.Korisnik

@{
    ViewData["Title"] = "Registracija";
}

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Naslovna</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <h1 style="text-align: center; margin-top: 10%">Registracija</h1>

    <p style="text-align: center; margin-top: 5%">Odaberite vrstu naloga kojom se želite registrovati</p>
    <hr />

    <table style="margin-top: 10%; width: 600px; text-align: center; margin-left: auto; margin-right: auto;">
        <thead>
            <tr>
                <th>
                    <form asp-action="RegistracijaKlijent">
                        <input type="submit" value="Klijentski nalog" class="btn btn-info" />
                    </form>
                </th>
                <th>
                    <form asp-action="RegistracijaDjelatnik">
                        <input type="submit" value="Djelatnički nalog" class="btn btn-info" />
                    </form>
                </th>
            </tr>
        </thead>
    </table>

    <footer>
    </footer>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
